@page
@model IndexModel
@{
}

<div class="text-center">

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      @{
        foreach (var item in Model.Playlists.Items)
        {
          <tr>
            <td>
            <a href="@item.ExternalUrls.FirstOrDefault().Value">
                <img width="100" height="100" src="@item.Images.FirstOrDefault().Url">
            </a>
            </td>
            <td>
              @item.Name
            </td>
            <td>
            </td>
          </tr>
        }
      }
    </tbody>
  </table>

  <div class="d-flex justify-content-around">

  @if(Model.Previous != null) {
    <a class="btn btn-secondary" href="@Model.Previous">Previous</a>
  }
  @if(Model.Next != null) {
    <a class="btn btn-secondary" href="@Model.Next">Next</a>
  }
  </div>
</div>
